<p class="mt-4">Password required to view this session.</p>

<%= form_for @conn, session_path(@conn, :secure_show, @session_slug), [as: :session, class: "mt-4"], fn f-> %>
  <div class="form-group">
    <%= label f, :password %>
    <%= password_input f, :password, class: "form-control" %>
  </div>

  <%= submit "Go", class: "btn btn-primary" %>
<% end %>
